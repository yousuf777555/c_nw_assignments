

#include <stdio.h>
#include <string.h>

char check(char* str)
{
    static int i = 0;
    if (i < strlen(str)) {
        if (str[i] >= 'A' && str[i] <= 'Z') {
            return str[i];
        }
        else {
            i = i + 1;
            return check(str);
        }
    }
    else
        return 0;
}

int main()
{
    char str[64];
    char cap;

    printf("Enter string: ");
    scanf("%[^\n]s", str);

    cap = check(str);

    if (cap == 0)
        printf("Capital letter is not found in the string\n");
    else
        printf("First Capital letter is: %c\n", cap);

    return 0;
}
